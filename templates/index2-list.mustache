      <!-- Custom CSS -->
      <link rel="stylesheet" href="assets/css/main.css">
  </head>
  <body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <h1>My Awesome Shop</h1>

    <div class="container">
      <div class="row">
        {{#items}}
          <div class="col-md-4">
            <figure class="cartitem" data-name="{{name}}" data-price="{{sellingprice}}" data-item="{{ID}}">
              <img src="{{baseurl}}{{ID}}/_image" alt="{{name}}" />
              <figcaption>
                <h3>{{name}}</h3>
                <p>{{description}}</p>
                <div class="price">
                  {{#regularprice}}<s>{{regularprice}}</s>{{/regularprice}}
                  {{sellingprice}}
                </div>
              </figcaption><i class="ion-android-cart"></i>
            </figure>
          </div>
        {{/items}}
      </div>
    </div>
  </body>
</html>

